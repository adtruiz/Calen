# Calen - Environment Configuration
# Copy this to .env and fill in your values

# Server
PORT=3000
NODE_ENV=production
TIMEZONE=America/Chicago

# Slack Configuration
# Get these from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret

# Slack Channel IDs
# Create channels like: #calen-vlaid, #calen-willow, #calen-network
# Right-click channel > View channel details > copy ID from URL
SLACK_CHANNEL_VLAID=
SLACK_CHANNEL_WILLOW=
SLACK_CHANNEL_NETWORK=
# Optional - add more as needed
SLACK_CHANNEL_VERZI=
SLACK_CHANNEL_DIATHRIVE=
SLACK_CHANNEL_MATURI=
SLACK_CHANNEL_GRAPHENE=
SLACK_CHANNEL_CMS=
SLACK_CHANNEL_SPORTSMARKETS=
SLACK_CHANNEL_EXECWATCHDOG=
SLACK_CHANNEL_RETROCASHRUSH=
SLACK_CHANNEL_MOMENTBEHELD=
SLACK_CHANNEL_PERSONAL=

# GitHub Configuration
# Create token at https://github.com/settings/tokens (needs repo scope)
GITHUB_TOKEN=
GITHUB_OWNER=adtruiz
GITHUB_REPO=Calen

# Google APIs (for Gmail + Calendar)
# Set up at https://console.cloud.google.com
# Enable Gmail API and Google Calendar API
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH_TOKEN=
